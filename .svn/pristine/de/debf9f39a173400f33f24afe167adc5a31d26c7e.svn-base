<script>
import { Resume } from "@/api/index.js";
import "@/assets/styles/perFunc.css";
export default {
  data() {
    return {
      personal: {},
      role: "EMP",
      resume: {},
      emplid: ""
    };
  },
  methods: {
    getResume(emplId, role) {
      let p = {
        EMPLID: emplId,
        ROLE: role,
        TYPE: "CV"
      };
      Resume(p).then(res => {
        if (res.status == "0") {
          this.resume = res.JsonData;
        }
      });
    },
    handleUpdate() {
      console.log(this.personal);
      // this.$route.push({ name: "", params: { personal, personal } });
    }
  },
  created() {
    this.personal = JSON.parse(sessionStorage.getItem("userInfo"));
    this.emplid = this.$route.params.emplid;
    if (this.emplid) this.getResume(this.emplid, "MGR");
    else this.getResume(this.personal.EMPLID, "EMP");
  }
};
</script>

